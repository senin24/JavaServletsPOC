<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <context-param>
        <param-name>title</param-name>
        <param-value>Super Project Managment System</param-value>
    </context-param>

    <context-param>
        <param-name>root</param-name>
        <param-value>JavaServletsPOC</param-value>
    </context-param>


  <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>controller.HomePageServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logoutservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllProjectsListServlet</servlet-name>
        <servlet-class>controller.AllProjectsListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllProjectsListServlet</servlet-name>
        <url-pattern>/allprojects</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllTasksListServlet</servlet-name>
        <servlet-class>controller.AllTasksListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllTasksListServlet</servlet-name>
        <url-pattern>/alltasks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllUsersListServlet</servlet-name>
        <servlet-class>controller.AllUsersListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllUsersListServlet</servlet-name>
        <url-pattern>/allusers</url-pattern>
    </servlet-mapping>

    <error-page>
        <location>/WEB-INF/errorpage.jsp</location>
    </error-page>

</web-app>
